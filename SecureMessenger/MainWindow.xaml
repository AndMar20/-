<Window x:Class="SecureMessenger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Secure Messenger" Height="520" Width="760" MinHeight="400" MinWidth="640">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0 0 0 8" Spacing="12">
            <StackPanel Width="240">
                <TextBlock Text="Общий ключ" FontWeight="SemiBold" />
                <PasswordBox x:Name="SharedKeyBox" Password="shared-secret" PasswordChar="●" Padding="6"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Spacing="8">
                <StackPanel>
                    <TextBlock Text="Локальный порт" FontWeight="SemiBold" />
                    <TextBox Text="4000" Width="120" Padding="6" x:Name="LocalPortBox"/>
                </StackPanel>
                <Button Content="Запустить сервер" Padding="12 8" Margin="8 18 0 0" Click="StartServer_Click"/>
                <Button Content="Остановить" Padding="12 8" Margin="0 18 0 0" Click="StopServer_Click"/>
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="1" BorderBrush="#DDD" BorderThickness="1" Padding="10" CornerRadius="6" Margin="0 0 0 10">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <StackPanel>
                    <TextBlock Text="Адрес получателя" FontWeight="SemiBold" />
                    <TextBox Width="200" Text="localhost" Padding="6" x:Name="RemoteHostBox"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Порт получателя" FontWeight="SemiBold" />
                    <TextBox Width="120" Text="4001" Padding="6" x:Name="RemotePortBox"/>
                </StackPanel>
                <Button Content="Отправить сообщение" Padding="12 8" VerticalAlignment="Bottom" Click="SendButton_Click"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <GroupBox Header="Сообщения" Margin="0 0 0 8" FontWeight="SemiBold">
                <ListBox ItemsSource="{Binding Messages}"/>
            </GroupBox>
            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0 8 0 0">
                <TextBlock Text="Ваше сообщение" FontWeight="SemiBold" />
                <TextBox x:Name="MessageBoxInput" AcceptsReturn="True" Height="90" TextWrapping="Wrap" Padding="6"/>
            </StackPanel>
        </Grid>

        <StatusBar Grid.Row="3" Margin="-4 8 -4 0">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
